<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomTab" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_margin">@dimen/tab_margin</item>
        <item name="android:maxHeight">@dimen/tab_max_height</item>
        <item name="android:padding">@dimen/tab_padding</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AppTheme.ButtonOrange" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_red</item>
    </style>

    <style name="AppTheme.ButtonWhite" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_white</item>
    </style>
    <style name="AppTheme.ButtonBlue" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_blue</item>
    </style>

    <style name="AppTheme.ButtonKindSport" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:text">@string/app_name</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="background">@color/white</item>
    </style>
</resources>
